@model WebApplication1.Models.EditPersonModel

@{
    ViewBag.Title = "Update " + Model.Name;
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h2>User details</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PersonId)

        <div class="form-group">
            @Html.LabelFor(model => model.IsAuthorised, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsAuthorised)
                    @Html.ValidationMessageFor(model => model.IsAuthorised, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsEnabled, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsEnabled)
                    @Html.ValidationMessageFor(model => model.IsEnabled, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <h2>@Html.DisplayNameFor(model => model.FavouriteColours)</h2>
        <hr />
        @foreach (var colour in Model.Colours)
        {
            <div class="form-group">
                @Html.Label(colour.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.CheckBox(colour.Name, Model.FavouriteColours.Any(c => c.Name == colour.Name))
                    </div>
                </div>
                <br />
            </div>
        }
        @Html.ValidationMessageFor(model => model.FavouriteColours, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default">
            </div>
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "Index")
            </div>
        </div>
    </div>
}

<div>

</div>
